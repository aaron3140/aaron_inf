	<!-- initServlet -->
	<servlet>
		<servlet-name>initialServletConfigurator</servlet-name>
		<servlet-class>
			framework.listener.InitialServletConfiguator
		</servlet-class>
		<load-on-startup>0</load-on-startup>
	</servlet>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<error-page>
		<error-code>404</error-code>
		<location>/404.jsp</location>
	</error-page>
